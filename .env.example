# Copy this file to .env and customize the values before running docker-compose.

# Port exposed by the application (server listens on 5000 internally)
PORT=5000

# SQLite database path. Stays inside the /app/data volume by default.
DATABASE_URL=sqlite:/app/data/crossword.sqlite

# Session secret for express-session cookies.
SESSION_SECRET=change-me-in-production
# Set to true only when serving over HTTPS behind a proxy/SSL terminator.
SESSION_COOKIE_SECURE=false

# Default admin account seeded on first boot. Update these in production.
DEFAULT_ADMIN_EMAIL=mark@example.com
DEFAULT_ADMIN_PASSWORD=super-secure-password
DEFAULT_ADMIN_NAME=Mark

# Location for session store and other writable data.
DATA_DIR=/app/data
